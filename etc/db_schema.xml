<?xml version="1.0"?>
<!-- Table `customer_loyalty_ratings` Creating -->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_loyalty_ratings" resource="default" engine="innodb" comment="Customer Loyalty Ratings">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
        		comment="ID"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false"
        		comment="Fk Order ID"/>
        <column xsi:type="int" name="delivery" padding="5" unsigned="true" nullable="false"
        		comment="Delivery"/>
        <column xsi:type="int" name="product" padding="5" unsigned="true" nullable="false"
        		comment="Product"/>
        <column xsi:type="int" name="customer_support" padding="5" unsigned="true" nullable="false"
        		comment="Customer Support"/>
        <column xsi:type="text" name="comments" nullable="true"
        		comment="Comments"/>
        <column xsi:type="boolean" name="approved" nullable="true"
        		comment="Approved Rating"/>
        <!-- Primary Key and Foreign Key Declaration -->
		<constraint xsi:type="primary" referenceId="PRIMARY">
    		<column name="id"/>
		</constraint>
        <constraint xsi:type="foreign" referenceId="CUSTOMER_LOYALTY_RATINGS_ENTITY_ID_SALES_ORDER_ENTITY_ID"
                    table="customer_loyalty_ratings" column="order_id" referenceTable="sales_order"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
